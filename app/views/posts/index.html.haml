= render 'layouts/notifications'
= render 'layouts/header'
.main
  .main__total
    総合映画ランキング
  .main__content
    - @post.first(5).each.with_index(1) do |post, i|
      = link_to post_path(post.id) do
        .main__content__each
          = i
          位👑
          = image_tag post.images[0][:pic], class: 'pic-size'
          = post.title.truncate(11)
          %br
          .main__content__each__favourite
            お気に入り数
            (
            = post.likes_count
            )
